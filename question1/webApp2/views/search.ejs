<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search for an Artist</title>
    <link rel="stylesheet" href="/search.css">
</head>
<body>
<h1>Search for an Artist</h1>
<form onsubmit="return submitForm()">
    <label for="artistName">Enter an artist name:</label>
    <input type="text" id="artistName" name="artistName" required>
    <button type="submit">Enter</button>
    <button type="reset">Clear</button>
</form>

<script>
    function submitForm() {
        const artistName = document.getElementById('artistName').value.toLowerCase();
        const artistIdMap = {
            "the rolling stones": 1,
            "miles davis": 2,
            "taylor swift": 3,
            "beethoven": 4
        };
        const artistId = artistIdMap[artistName];

        if (artistId) {
            window.location.href = `/search/artist_album/${artistId}`;
        } else {
            alert("Artist not found");
        }
        return false;
    }
</script>
</body>
</html>
